<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="clock.screens"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />

        <provider
            android:authorities="ru.db.locationlist.contactprovider"
            android:name=".DBContentProvider" />

        <activity
            android:label="@string/app_name"
            android:name=".WelcomScreen" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/title_menu"
            android:name=".MenuScreen" >
        </activity>
        <activity
            android:label="@string/title_pinfo"
            android:name=".PInfoScreen" >
        </activity>
        <activity
            android:label="@string/title_frlist"
            android:name=".FrListScreen" >
        </activity>
        <activity
            android:label="@string/title_addfriend"
            android:name=".AddFrScreen" >
        </activity>
        <activity
            android:label="@string/title_rqfriend"
            android:name=".RequestFriendScreen" >
        </activity>
        <activity
            android:label="@string/title_map"
            android:name=".MapScreen" >
        </activity>
        <activity
            android:label="@string/title_clock"
            android:name=".ClockScreen" >
        </activity>
        <activity
            android:label="@string/title_register"
            android:name=".RegisterScreen" >
        </activity>
        <activity
            android:label="@string/title_view"
            android:name=".ClockViewScreen" >
        </activity>
    </application>

</manifest>